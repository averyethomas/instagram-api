include includes/header.pug

div.container
    h1 Instagram Data
    h4 @averyethomas
    table.dashboard-table(data-ng-controller='instaCtrl')
        tr.row
            td.field.photo
                <i class="fa fa-camera" aria-hidden="true"></i>
                small Photo
            td.field.date
                <i class="fa fa-calendar-o" aria-hidden="true"></i>
                small Date
            td.field.time
                <i class="fa fa-clock-o" aria-hidden="true"></i>
                small Time
            td.field.caption
                <i class="fa fa-comment-o" aria-hidden="true"></i>
                small Caption
            td.field.likes
                <i class="fa fa-heart-o" aria-hidden="true"></i>
                small Likes
            td.field.likes
                <i class="fa fa-user-plus" aria-hidden="true"></i>
                small New Likers
            td.field.comments
                <i class="fa fa-comments-o" aria-hidden="true"></i>
                small Comments
            td.field.tags
                <i class="fa fa-hashtag" aria-hidden="true"></i>
                small Hashtags
        tr.row(data-ng-repeat='item in posts')
            td.field.photo
                a(data-ng-href='{{ item.link }}' target='_blank')
                    img(data-ng-src='{{ item.images.thumbnail.url }}')
            td.field.date
                p {{ item.created_time * 1000 | date: 'MM/dd/yy' }}
            td.field.time
                p {{ item.created_time * 1000 | date: 'hh:mm a' }}
            td.field.caption
                p {{ item.caption.text }}
            td.field.likes
                p {{ item.likes.count }}
            td.field.likes
                p ??
            td.field.comments
                p {{ item.comments.count }}
            td.field.tags
                a(data-ng-href='https://www.instagram.com/explore/tags/{{ tag }}' target='_blank' data-ng-repeat= 'tag in item.tags')  &#x23;{{ tag }}       
                p
                    span.italic Total: {{ item.tags.length }}

include includes/footer.pug        